{
  "name": "@magic-marker/prosemirror-suggest-changes",
  "version": "0.1.8",
  "license": "MIT",
  "type": "module",
  "module": "dist/index.js",
  "private": false,
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "build:esm": "swc ./src --strip-leading-paths --ignore \"**/__tests__/**,**/testing/**\" -d ./dist/",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "rimraf dist && concurrently -P 'npm:build:* {@}' --",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:types": "tsc",
    "check": "concurrently -P 'npm:check:* {@}' --",
    "clean": "rimraf \"./dist/!(cjs/package.json)\"",
    "demo": "pnpm vite",
    "demo:build": "pnpm vite build --outDir docs --base=/prosemirror-suggest-changes/",
    "dev": "pnpm build -- --watch",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --cache --fix .",
    "fix:toc": "markdown-toc --bullets='-' -i README.md",
    "fix": "concurrently -P 'npm:fix:* {@}' --",
    "prepack": "pnpm build",
    "test": "vitest",
    "test:e2e": "playwright test"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@handlewithcare/remark-prosemirror": "^0.1.5",
    "@playwright/test": "^1.56.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.5",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "markdown-toc": "^1.2.0",
    "playwright": "^1.56.0",
    "prettier": "^3.5.3",
    "prosemirror-commands": "^1.7.0",
    "prosemirror-history": "^1.4.1",
    "prosemirror-inputrules": "^1.4.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.24.1",
    "prosemirror-schema-basic": "^1.2.3",
    "prosemirror-schema-list": "^1.5.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-test-builder": "^1.1.1",
    "prosemirror-transform": "^1.10.2",
    "prosemirror-view": "^1.38.0",
    "remark-parse": "^11.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "unified": "^11.0.5",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
  },
  "peerDependencies": {
    "prosemirror-model": "^1.0.0",
    "prosemirror-state": "^1.0.0",
    "prosemirror-transform": "^1.0.0",
    "prosemirror-view": "^1.0.0"
  },
  "dependencies": {
    "chokidar": "^5.0.0"
  }
